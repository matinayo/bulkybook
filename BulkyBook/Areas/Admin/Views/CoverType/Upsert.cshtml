@model BulkyBook.Models.CoverType
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Cover Type";
}

<!-- same page for edit and create Cover Type -->

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            // page is for edit
            title = "Edit Cover Type";

        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        // display edit and back button
                        <partial name="_EditAndBackButton" model="Model.Id" />
                    }
                    else
                    {
                        // display create and back button
                        <partial name="_CreateAndBackButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
